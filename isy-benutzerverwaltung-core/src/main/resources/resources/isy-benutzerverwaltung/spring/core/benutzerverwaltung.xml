<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean name="passwordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"/>

    <bean name="passwordPolicy" class="de.bund.bva.isyfact.benutzerverwaltung.core.benutzerverwaltung.passwortpolicy.impl.DefaultPasswortPolicy">
        <constructor-arg ref="benutzerverwaltung"/>
        <constructor-arg ref="konfiguration"/>
        <constructor-arg ref="passwordEncoder"/>
    </bean>

    <bean name="benutzerverwaltung"
          class="de.bund.bva.isyfact.benutzerverwaltung.core.benutzerverwaltung.impl.BenutzerverwaltungImpl">
        <constructor-arg ref="benutzerDao"/>
        <constructor-arg ref="rollenDao"/>
        <constructor-arg ref="passwordEncoder"/>
        <constructor-arg ref="dozer"/>
        <constructor-arg ref="beanValidator"/>
        <constructor-arg ref="konfiguration"/>
    </bean>

</beans>
