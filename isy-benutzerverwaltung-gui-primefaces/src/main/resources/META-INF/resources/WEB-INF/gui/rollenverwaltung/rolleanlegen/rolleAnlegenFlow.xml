<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns="http://www.springframework.org/schema/webflow"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
      parent="applikationseiteParentFlow">

    <secured attributes="Benutzerverwaltung.Rolle.Anlegen"/>

    <var name="rolleAnlegenModel"
         class="de.bund.bva.isyfact.benutzerverwaltung.gui.rollenverwaltung.rolleanlegen.RolleAnlegenModel"/>

    <on-start>
        <evaluate expression="rolleAnlegenController.initialisiereModel(rolleAnlegenModel)"/>
    </on-start>

    <view-state id="rolleAnlegenViewState" model="rolleAnlegenModel">
        <attribute name="headlineKey" value="MAS_Rollenverwaltung_Headline"/>
        <transition on="speichern" to="rolleAnlegenViewState">
            <evaluate expression="rolleAnlegenController.legeRolleAn(rolleAnlegenModel)"/>
        </transition>
        <transition on="fertig" to="end"/>
    </view-state>

    <end-state id="end"></end-state>
</flow>
