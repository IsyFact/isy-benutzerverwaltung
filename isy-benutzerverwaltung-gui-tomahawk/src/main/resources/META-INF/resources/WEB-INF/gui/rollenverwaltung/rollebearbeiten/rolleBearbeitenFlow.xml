<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns="http://www.springframework.org/schema/webflow"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
      parent="applikationseiteParentFlow">

    <secured attributes="Benutzerverwaltung.Rolle.Aendern"/>

    <var name="rolleBearbeitenModel"
         class="de.bund.bva.isyfact.benutzerverwaltung.gui.rollenverwaltung.rollebearbeiten.RolleBearbeitenModel"/>

    <input name="ausgewaehlteRolle"
           type="de.bund.bva.isyfact.benutzerverwaltung.gui.benutzerverwaltung.model.RolleModel"/>

    <on-start>
        <evaluate
                expression="rolleBearbeitenController.initialisiereModel(rolleBearbeitenModel)"/>
        <evaluate
                expression="rolleBearbeitenController.setzeRolle(rolleBearbeitenModel, ausgewaehlteRolle)"/>
    </on-start>

    <view-state id="rolleBearbeitenViewState" model="rolleBearbeitenModel">
        <transition on="speichern" to="rolleBearbeitenViewState">
            <evaluate expression="rolleBearbeitenController.aendereRolle(rolleBearbeitenModel)"/>
        </transition>
        <transition on="zurueck" to="zurueck"/>
    </view-state>

    <end-state id="zurueck"/>

</flow>
