<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns="http://www.springframework.org/schema/webflow"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
      parent="applikationseiteParentFlow">

    <secured attributes="Benutzerverwaltung.Benutzer.Aendern"/>

    <var name="passwortZuruecksetzenModel"
         class="de.bund.bva.isyfact.benutzerverwaltung.gui.benutzerverwaltung.passwortzuruecksetzen.PasswortZuruecksetzenModel"/>

    <input name="ausgewaehlterBenutzer"
           type="de.bund.bva.isyfact.benutzerverwaltung.gui.common.model.BenutzerModel"/>

    <on-start>
        <evaluate
                expression="passwortZuruecksetzenController.initialisiereModel(passwortZuruecksetzenModel)"/>
        <evaluate
                expression="passwortZuruecksetzenController.setzeBenutzer(passwortZuruecksetzenModel, ausgewaehlterBenutzer)"/>
    </on-start>

    <view-state id="benutzerPasswortZuruecksetzenViewState" model="passwortZuruecksetzenModel">
        <transition on="speichern" to="benutzerPasswortZuruecksetzenViewState">
            <evaluate
                    expression="passwortZuruecksetzenController.passwortZuruecksetzen(passwortZuruecksetzenModel)"/>
        </transition>
        <transition on="zurueck" to="zurueck"/>
    </view-state>

    <end-state id="zurueck"></end-state>

</flow>
